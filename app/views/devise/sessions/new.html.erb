<h2 class="title">Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, class: 'field_input', placeholder: 'Почта' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", class: 'field_input', placeholder: 'Пароль' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field field_last">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Запомнить меня?' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Войти", class: 'submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
